<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Beach Former Helium Integration App</title>
  </head>
  <body>
    <h1>Helium Integration App</h1>
    <form action="/get_status" method="POST">
      <button type="submit">Get Status</button>
    </form>
    <form action="/calibrate" method="POST">
      <button type="submit">Calibrate</button>
    </form>
    <form action="/tare" method="POST">
      <button type="submit">Tare</button>
    </form>
    <form action="/" method="POST">
      <button type="submit">Show Live Data</button>
    </form>
   
  <div>
    <textarea name="data" id="showData" cols="110" rows="2"></textarea>
  </div>
            
    <script src="https://cdn.socket.io/4.5.0/socket.io.min.js" integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k" crossorigin="anonymous"></script>
    <script>
        console.log("index file");
        var socket = io();
        socket.on('greeting-from-server', function (message) {
          let el = document.querySelector("#showData");
          el.value = message.greeting;
          
            socket.emit('greeting-from-client', {
                greeting: 'Hello Server'
            });
        });
  </script>
  </body>
</html>
